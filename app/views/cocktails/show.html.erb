<div class="container">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= @cocktail.name %></h5>
      <% @cocktail.doses.each do |dose| %>
      <p>Dose: <%= dose.description %> of: <%= dose.ingredient.name %> |<%= link_to "Delete", dose_path(dose), method: :delete %></p>
      <% end %>
    </div>
    <div class="card-img">
      <% if @cocktail.photo.attached? %>
      <%= cl_image_tag @cocktail.photo.key, width: 300, height: 150, crop: :fill %>
      <% else %>
      <p>No photo attached</p>
      <% end %>
    </div>
  </div>
  <div>
    <%= link_to "Add Ingredient/dose combinaison", new_cocktail_dose_path(@cocktail) %>
  </div>
  <div>
    <h3><%= link_to "Back", cocktails_path %></h3>
  </div>
</div>
