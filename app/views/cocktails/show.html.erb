<div class="container">
  <div class="card">
    <div class="card-body">
    <h5 class="card-title"><%= @cocktail.name %></h5>
    <% @cocktail.doses.each do |dose| %>
      <p>Dose: <%= dose.description %> of: <%= dose.ingredient.name %></p>
    <% end %>
    </div>
  </div>
  <div>
    <%= link_to "Add Ingredient/dose combinaison", new_cocktail_dose_path(@cocktail) %>
  </div>
  <div>
    <h3><%= link_to "Back", cocktails_path %></h3>
  </div>
</div>
